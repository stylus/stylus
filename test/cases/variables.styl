a = {
  margins: 10px 20px 30px 40px
}

$c = {
  colors: #ccc #ddd
  border: 10px 20px 30px
}

$p = {
  color: #fff
  pinBorder: 10px
  backGroundColor: $c.colors[1]
  backGroundColor2: $c.colors[0]
  widthBreakPoint: 1024px
}
size = 14px
font-family = 'Lucida Grande', Arial, sans-serif
$type = solid
blue = #00c

body
  color blue(blue)

body
  font size font-family
  padding pad = 5px
  margin pad

a
  font 11px Impact, font-family, serif
  border 1px $type #fff
  color $p.color
  background 10px $p.backGroundColor

  @media screen and (max-width $p.widthBreakPoint)
    background 20px $p.backGroundColor2

  margin size

a.margins,
em
  padding 10px $c.border[1]
  margins a.margins[0] a.margins[1] a.margins[2] a.margins[3]

  &-pin
    absolute top - ($p.pinBorder[0] + 1px)
